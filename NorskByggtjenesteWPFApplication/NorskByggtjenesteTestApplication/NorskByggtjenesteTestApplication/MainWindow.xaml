<Window x:Class="NorskByggtjenesteTestApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorskByggtjenesteTestApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="265,345,0,0" VerticalAlignment="Top" Width="298" Height="43" IsCancel="True" Click="SaveButton_Click" FontSize="22"/>
        <Button x:Name="AddNewButton" Content="+" HorizontalAlignment="Left" Margin="722,10,0,0" VerticalAlignment="Top" Width="60" Height="215" Background="#FF74CF89" FontSize="24" Click="AddNewContent_Click"/>
        <TextBox x:Name="ContentTextBox" HorizontalAlignment="Left" Height="215" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="707"/>
        <Label x:Name="ProgressLabel" Content="Count of files:" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.224,0.633"/>
        <Label x:Name="CountOfContentsLabel" Content="" HorizontalAlignment="Left" Margin="118,230,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.494,0.5"/>

    </Grid>
</Window>
